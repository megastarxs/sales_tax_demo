!!!
%html{lang: "en", "ng-app"=>"salesTaxApp"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title SalesTax
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular.min.js"
    = javascript_include_tag "application"
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{href: "#"} SalesTax

    #main_container.container{ "ng-controller"=>"SalesTaxCtrl"}
      .row
        .span9
          = yield
